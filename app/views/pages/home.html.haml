- content_for :title do
  Primary Code
= nav_at 'Home'

- content_for :hero do
  %section.hero
    %h1 A coding bootcamp in the heart of downtown West Palm Beach.
    %ul
      %li An unparalleled education.
      %li 5 minutes to the beach.
    .call-to-action
      = link_to 'Apply Today', apply_path
      &#124;
      = link_to 'View Courses', programs_path
    = render 'shared/subscribe'

%ul.tiles
  // PITCH
  %li.t-col.w-1-2.m-1-1
    = link_to about_path, class: 't-block hoverable pitch' do
      %span.off-screen Links to About Us page.
      .t-pattern
      .t-content
        %h2.typed-no-js
          = image_tag 'logos/icon-black-50x64.png', width: '25', height: '32'
          Change your life.
        #typed-strings
          %p Change your life.
          %p Advance in your career.
          %p Start a new career.
          %p Upgrade your skills.
          %p Launch your own ideas.
          %p Learn to code.
          %p Have fun.
        %h2.typed-header
          = image_tag 'logos/icon-black-50x64.png', width: '25', height: '32'
          %span#typed
      .t-middle
        %p Top tech companies in Florida pay an average salary of:
        %p $83,210 to $137,270
        -# %cite
        -#   Source: Robert Half 2016 Salary Guide for Technology Professionals, WPB area for Ruby on Rails
        -#   -# %a{href: 'https://www.roberthalf.com/sites/default/files/Media_Root/images/rht-pdfs/robert_half_technology_2016_salary_guide.pdf', target: '_blank'} Robert Half 2016 Salary Guide for Technology Professionals
      .t-bottom
        %h3 Learn about us and how we can help you get there.
      .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus-dark'

  %li.t-col.w-1-2.m-1-1
    // WEB DEV
    = link_to web_dev_path, class: 't-block hoverable h-16x9 web-dev-program' do
      %span.off-screen Links to Web Development Immersive course outline.
      .t-content
        %h2 Web Development Immersive
        %p You'll learn everything you need to become a professional web developer using Ruby on Rails.
      .t-bottom
        %h3 A 10-week immersive program.
      .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus'
    %div
      .t-block.h-16x7
        // SUMMER OF CODE
        = link_to summer_path, class: 't-n-block hoverable summer-program' do
          %span.off-screen Links to Summer of Code course outline.
          .t-n-content
            %h3 Summer of Code
            %p An immersive summer bootcamp for highschool students.
          .t-bottom
            %h4 June 13 &ndash; August 5
          .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus-dark'
        // LAUNCH
        = link_to launch_path, class: 't-n-block hoverable launch-program' do
          %span.off-screen Links to Launch Program overview.
          .t-n-content
            %h3 Launch Program
            %p
              Bring your ideas
              %br
              to reality.
          .t-bottom
            = image_tag 'icons/rocket-computer.png', alt: 'Rocket launching off of computer'
          .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus'

  %li.t-col.w-1-2.m-1-1
    %div.splitter
      .t-block.h-16x7
        // BACK END
        = link_to backend_path, class: 't-n-block hoverable backend-program' do
          %span.off-screen Links to Backend Immersive course outline.
          .t-n-content
            %h3 Backend Immersive
            %p.swap-1 Take a deep dive into functional programming with Elixir and Phoenix.
            %p.swap-2 Take a deep dive into functional programming, the future of the Web with Elixir and Phoenix.
          .t-bottom
            %h4 An 10-week immersive program.
          .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus'
        // PART TIME
        = link_to part_time_path, class: 't-n-block hoverable part-time-program' do
          %span.off-screen Links to Part Time course outline.
          .t-n-content
            %h3 Part Time Programs
            %p For the working professional.
          .t-bottom
            %h4 16-weeks, Tuesday &amp; Thursday evenings.
          .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus'
    // FAQ
    = link_to faq_path, class: 't-block hoverable h-16x9 faq' do
      %span.off-screen Links to FAQs.
      -# .t-pattern
      .t-content
        %h2 Frequently Asked Questions
        %p What kind of jobs do grads get?
        %p How do I get in?
        %p What's a typical day like for students?
        %p Does Primary Code help students find jobs?
        %p What will I learn?
      .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus'

  // ESSENCE
  %li.t-col.w-1-2.m-1-1
    = link_to programs_path, class: 't-block hoverable essence' do
      %span.off-screen Links to program listings.
      .t-pattern
      .t-content
        %h2 Expect a lot in a short period of time.
      .t-middle
        .highlights
          %h3.education Education
          %h3.experience Experience
          %h3.adventure Fun &amp; Adventure
          %h3.networking Networking for Life
      .t-bottom
        %h3 Our programs are intense, unparalleled, and fun.
      .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus-dark'

  // EVENTS
  %li.t-col.w-1-2.m-1-1
    .t-block.events
      .t-content
        %h2 Upcomming Events
        %ul
          %li
            = embedded_svg 'icons/svg/calendar.svg', class: 'calendar'
            .date
              %p June 6
            .details
              %h3 Open House
              %p 5:00 PM to 7:00 PM
          %li
            = embedded_svg 'icons/svg/calendar.svg', class: 'calendar'
            .date
              %p June 13
            .details
              %h3 Hack Night
              %p 5:00 PM to 7:00 PM
          %li
            = embedded_svg 'icons/svg/calendar.svg', class: 'calendar'
            .date
              %p 2nd Tuesday
            .details
              %h3 WPB Ruby Group
              %p 6:45 PM to 10:00 PM
          %li
            = embedded_svg 'icons/svg/calendar.svg', class: 'calendar'
            .date
              %p 1st Tuesday
            .details
              %h3 WPB Elixir Group
              %p 6:45 PM to 10:00 PM

  // TESTIMONIALS
  %li.t-col.w-1-2.m-1-1
    .t-block.testimonials
      .t-content
        %ul.bxslider
          %li
            =image_tag 'pics/testimonials/chris-maxwell.jpg'
            %blockquote
              = embedded_svg 'icons/svg/left-quote.svg', class: 'quote'
              %p We are passionate about technology and believe learning to code can radically transform ones career and life path for the better.
              %footer &mdash; Chris Maxwell, Founder of Primary Code
          / %li
          /   .image=image_tag 'pics/testimonials/anthony-gutilla.jpg'
          /   %blockquote
          /     %p Primary code is an excellent place to start your coding career.
          /     %footer &mdash; Anthony Gutilla

  // PARTNERS
  %li.t-col.w-1-1.m-1-1
    = link_to employers_path, class: 't-block hoverable partners' do
      %span.off-screen Links to employers page.
      .t-content
        %h2 Hiring Partners
        .t-middle
          =image_tag 'logos/partners/VT_Logo.png'
          =image_tag 'logos/partners/ojala.png'
      .t-more= embedded_svg 'icons/svg/popout.svg', class: 'plus-dark'

// GALLERY
%section.gallery
  %h2 Work hard, play hard
  .images
    =link_to root_path, class: 'image-1' do
      = image_tag 'pics/gallery/IMG_2628-ol.jpg', alt: 'Primary Code Building'
    =link_to root_path, class: 'image-2' do
      = image_tag 'pics/gallery/IMG_6579_2-ol.jpg', alt: 'Surfer Kid'
    =link_to root_path, class: 'image-3' do
      = image_tag 'pics/gallery/Blowing-Rock-070-ol.jpg', alt: 'Beach With Rocks'
      =# image_tag 'pics/IMG_6931.jpg', alt: 'Surfer Dude'
      =# image_tag 'pics/IMG_2722.jpg', alt: 'Draw Bridge'
      =# image_tag 'pics/IMG_2671.jpg', alt: 'Beach Sign'
      =# image_tag 'pics/IMG_2676_1.jpg', alt: 'Beach Sign With Flag'
      =# image_tag 'pics/Blowing-Rock-205.jpg', alt: 'Sky Through Rocks'
  %p
    Our next course begins June 13
    = link_to 'Learn More', summer_path, class: 'button button-rounded button-flat'

