- content_for :main_navigation do
  %a{href: '#main', class: 'screen-reader-text'} Skip to main content
  %a{href: '#sidr', id: 'menu-button', class: 'menu-button'}
    %span Menu
  -# %a{id: 'close-menu-button'} Close Menu
  %nav{role: 'navigation', id: 'sidr', class: 'main-menu'}
    %ul#nav
      = nav_to 'Home', home_path
      = nav_to 'About', about_path
      = nav_to 'The Program', program_path do
        %ul
          %li= link_to 'Is this for me?', for_me_path
          %li= link_to 'Course Dates', course_dates_path, title: 'Course date and schedules'
          %li= link_to 'Tuition', tuition_path
          %li= link_to 'Info Sessions', info_path, title: 'Info sessions, events and tours'
          %li= link_to 'Front-end Bootcamp', front_end_path
          %li= link_to 'Part-time Courses', part_time_path
          %li= link_to 'Summer of Code', summer_path
          %li= link_to 'Launch Program', launch_path, title: 'Launch your idea'
      = nav_to 'Employers', employers_path
      = nav_to 'Students', students_path
      = nav_to 'Alumni', alumni_path
      = nav_to 'Blog', blog_path
      = nav_to 'Apply', apply_path
      = nav_to 'Contact', contact_path
