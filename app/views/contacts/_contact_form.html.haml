= form_for @message, url: { action: "create" }, html: { role: 'form', class: 'form' } do |f|
  = render 'shared/error_message'
  %fieldset
    %legend
    %ol
      %li
        .form-label= f.label 'name'
        .form-input= f.text_field :name
      %li
        .form-label= f.label 'email'
        .form-input= f.email_field :email
      %li
        .form-label= f.label 'phone'
        .form-input= f.phone_field :phone
      %li
        .form-label= f.label 'content', 'Tell us a little about your project'
        .form-textarea= f.text_area :content, cols: 5, rows: 5
      %li
        .form-button= f.submit "Submit"
