!!!
%html.no-js{lang: 'en'}
  = render 'layouts/head'
  %body{class: controller_name + '-' + action_name}
    = render 'layouts/browsehappy'
    .container.shadow
      .wrapper
        %header{role: 'banner'}
          = render 'layouts/logo'
          = yield :main_navigation
        = yield :hero
    #main{role: 'main'}
      .container.shadow
        = yield
    .container= render 'layouts/footer'
    = render 'layouts/scripts'
