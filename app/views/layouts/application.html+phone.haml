%html.no-js{lang: 'en'}
  = render 'layouts/phone/head'
  %body{class: controller_name + '-' + action_name}
    .container.shadow
      .wrapper
        %header{role: 'banner'}
          = render 'layouts/phone/logo'
          = yield :main_navigation
        = yield :hero
      #main{role: 'main'}
        = yield
      = render 'layouts/phone/footer'
    = render 'layouts/phone/scripts'
