%head
  %meta{charset: "utf-8"}
  %link{rel: "dns-prefetch", href: "//fonts.googleapis.com"}
  %link{rel: "dns-prefetch", href: "//use.typekit.com"}
  %meta{"http-equiv" => "x-ua-compatible", content: "ie=edge"}
  -# https://github.com/h5bp/html5-boilerplate/blob/master/dist/doc/html.md#x-ua-compatible
  -# Can setup in application.rb as follows:
  -# http://chriszetter.com/blog/2013/10/04/setting-headers-in-rails-4/
  -# config.action_dispatch.default_headers.merge!('X-UA-Compatible' => 'IE=edge')

  %title= content_for?(:title) ? yield(:title) : "Primary Code"

  - if content_for?(:description_tag)
    %meta{name: "description",       content: yield(:description_tag).strip}
  - else
    %meta{name: "description",       content: "Born to code? We build programmers and connect them to careers. Learn to program at Primary Code, an elite software career accelerator located in the heart of downtown West Palm Beach Florida. We offer immersive coding bootcamps in CSS, HTML, JavaScript, React, Ruby on Rails, Elixir, UX and client interactions. Learn to code and change your life!"}

  %meta{property: "og:locale",       content: "en_US"}
  %meta{property: "og:type",         content: "website"}
  %meta{property: "og:url",          content: "http://primarycode.com"}
  %meta{property: "og:site_name",    content: "Primary Code"}
  %meta{property: "og:title",        content: "Primary Code"}
  %meta{property: "og:description",  content: "Born to code? We build programmers and connect them to careers. Learn to program at Primary Code, an elite software career accelerator located in the heart of downtown West Palm Beach Florida. We offer immersive coding bootcamps in CSS, HTML, JavaScript, React, Ruby on Rails, Elixir, UX and client interactions. Learn to code and change your life!"}
  %meta{property: "og:image",        content: "http://primarycode.com/primary-code-logo-1200x630.png"}

  %meta{name: "twitter:card",        content: "summary"}
  %meta{name: "twitter:site",        content: "@primarycoder"}
  %meta{name: "twitter:url",         content: "https://twitter.com/primarycoder"}
  %meta{name: "twitter:title",       content: "Primary Code"}
  %meta{name: "twitter:description", content: "Born to code? We build programmers and connect them to careers. Learn to program at Primary Code, an elite software career accelerator located in the heart of downtown West Palm Beach Florida. We offer immersive coding bootcamps in CSS, HTML, JavaScript, React, Ruby on Rails, Elixir, UX and client interactions. Learn to code and change your life!"}
  %meta{name: "twitter:image",       content: "http://primarycode.com/primary-code-icon-1200x1200.png"}

  %meta{itemprop: "name",            content: "Primary Code"}
  %meta{itemprop: "url",             content: "http://primarycode.com"}
  %meta{itemprop: "description",     content: "Born to code? We build programmers and connect them to careers. Learn to program at Primary Code, an elite software career accelerator located in the heart of downtown West Palm Beach Florida. We offer immersive coding bootcamps in CSS, HTML, JavaScript, React, Ruby on Rails, Elixir, UX and client interactions. Learn to code and change your life!"}

