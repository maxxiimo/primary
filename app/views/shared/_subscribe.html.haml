=# form_for @, html: { role: 'form', class: 'subscribe' } do |f|
%form.subscribe
  %ol
    %li.form-label
      %label join our mailing list
      -#.form-label= f.label :
    %li.form-container
      -#.form-field= f.text_field :, autofocus: true
      %input{type: "email", placeholder: "email@example.com"}
      -#.form-button= f.submit ""
      %button{class: 'button button-rounded button-flat-primary'} subscribe

